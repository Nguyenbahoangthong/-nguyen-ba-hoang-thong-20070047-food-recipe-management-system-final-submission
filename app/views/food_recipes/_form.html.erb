  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :food_id, class: label_class %>
          <%= form.select :food_id, options_from_collection_for_select(Food.all,'id','name',select = food_recipe.food_id), class:label_class %>
      </div>
  <div class="mb-6">
        <%= form.label :ingredient_id, class: label_class %>
          <%= form.text_field :ingredient_id, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :description, class: label_class %>
          <%= form.text_field :description, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :instruction, class: label_class %>
          <%= form.text_field :instruction, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :author_id, class: label_class %>
          <%= form.text_field :author_id, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

