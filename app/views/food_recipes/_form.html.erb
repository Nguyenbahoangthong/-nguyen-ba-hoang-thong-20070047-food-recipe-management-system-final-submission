<%= link_to "Cancel", food_recipe, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", food_recipes_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
